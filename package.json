  "homepage": "https://github.com/freeCodeCamp/news-translation#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/freeCodeCamp/news-translation.git"
  },
  "bugs": {
    "url": "https://github.com/freeCodeCamp/news-translation/issues"
  },
  "devDependencies": {
    "@lint-md/cli": "^2.0.0",
    "@types/node": "^20.14.11",
    "@vercel/ncc": "^0.38.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.{json,yml,js}": "prettier --write",
    "*.md": "lint-md --fix"
  },
  "scripts": {
    "lint": "lint-md chinese/**/*.md",
    "format": "lint-md chinese/**/*.md --fix",
    "test": "lint-staged",
    "prepare": "husky",
    "build": "npm run action:build",
    "action:build": "rimraf dist/  &&  ncc build ./src/index.ts -m -o dist --license licenses.txt"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^21.0.1",
    "linkedom": "^0.18.4",
    "marked": "^13.0.2",
    "openai": "^4.52.7"
  }
}
